<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/editTextRs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="7"
            />

        <Button
            android:id="@+id/btn8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="8"
            />

        <Button
            android:id="@+id/btn9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="9"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="+"
            />

        /////////////////////////////////////////////

        <Button
            android:id="@+id/btn4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="4"
            />

        <Button
            android:id="@+id/btn5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="5"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="6"
            />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:text="-"
            />

        /////////////////////////////////////////////


        <Button
            android:id="@+id/btn1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="1"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="2"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:text="3"
            />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:text="*"
            />

        /////////////////////////////////////////////

        <Button
            android:id="@+id/btnClear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="C"
            />

        <Button
            android:id="@+id/btn0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="0"
            />

        <Button
            android:id="@+id/btnEquals"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:text="="
            />

        <Button
            android:id="@+id/btnDivide"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="4"
            android:text="/"
            />

    </GridLayout>

</LinearLayout>
